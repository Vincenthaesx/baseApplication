<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/rubik_regular</item>
        <item name="colorControlActivated">@color/white</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/black</item>
    </style>

    <style name="MenuItem">
        <item name="android:paddingTop">@dimen/margin_default</item>
        <item name="android:paddingBottom">@dimen/margin_default</item>
        <item name="android:background">@drawable/background_menu_item</item>
        <item name="android:textAppearance">@style/menu_style</item>
    </style>

</resources>
